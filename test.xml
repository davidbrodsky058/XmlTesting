<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    
    <!-- מי יכול לשלוח לאישור -->
    <allowedSubmitters>
        <type>user</type>
        <submitter>jdoe@example.com</submitter>
    </allowedSubmitters>

    <!-- תנאי כניסה לתהליך האישור -->
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Amount</field>
            <operation>greaterThan</operation>
            <value>10000</value>
        </criteriaItems>
    </entryCriteria>

    <!-- פעולות בזמן הגשה -->
    <initialSubmissionActions>
        <action>
            <name>NotifyManager</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>

    <!-- שלב האישור הראשון -->
    <approvalStep>
        <name>Step1</name>
        <label>Manager Approval</label>
        <allowDelegate>false</allowDelegate>
        
        <assignedApprover>
            <approver>
                <type>role</type>
                <name>Sales_Manager</name>
            </approver>
        </assignedApprover>

        <approvalActions>
            <action>
                <name>ApproveNotification</name>
                <type>Alert</type>
            </action>
        </approvalActions>

        <rejectionActions>
            <action>
                <name>RejectNotification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>

        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>

    <!-- פעולות בסיום אישור -->
    <finalApprovalActions>
        <action>
            <name>FinalApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>

    <!-- פעולות בדחייה סופית -->
    <finalRejectionActions>
        <action>
            <name>FinalRejected</name>
            <type>OutboundMessage</type>
        </action>
    </finalRejectionActions>

    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>

    <label>Opportunity Approval Over 10K</label>
</ApprovalProcess>
